<body>
    <%- include ("../partials/navigation.ejs"); %>


    <div class="container">
        <h1><%= items.myObject.evaluacion.title %></h1>
        <%- include ("../partials/message.ejs"); %>

        <div class="card">
            <form method="POST" , id="aux" action=''>
                <% for (var i=0; i< items.myObject.evaluacion.recomendacion.length; i++) { %>
                <div class="col-sm">
                    <label class="myLabels"><%= items.myObject.evaluacion.recomendacion[i].label %></label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class=" spanColor input-group-text"><i
                                    class="  myIcons <%= items.myObject.evaluacion.recomendacion[i].icon %>"></i></span>
                        </div>

                        <select required id="recomendacion" class="mySelects form-control"
                            name="<%= items.myObject.evaluacion.recomendacion[i].name %>">
                            <% for (var j=0; j< items.myRecomendations.length; j++) { %>
                            <option value="<%= items.myRecomendations[j]["_id"] %>">
                                <%= items.myRecomendations[j]["_id"] %> </option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <% } %>

                <% for (var i=0; i< items.myObject.evaluacion.form.length; i++) { %>
                <div class="col-sm">
                    <label class="myLabels"><%= items.myObject.evaluacion.form[i].label %></label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class=" spanColor input-group-text"><i
                                    class="  myIcons <%= items.myObject.evaluacion.form[i].icon %>"></i></span>
                        </div>

                        <select required id="lista1" class="mySelects form-control"
                            name="<%= items.myObject.evaluacion.form[i].name %>">
                            <% for (var j=0; j< items.myObject.evaluacion.form[i].options.length; j++) { %>
                            <option value=<%= j%>>
                                <%= items.myObject.evaluacion.form[i].options[j] %> </option>
                            <% } %>
                        </select>

                    </div>
                </div>
                <% } %>

                <div class="lista2" id="lista2">
                    <select required class='mySelect form-control' id="select2"></select>
                </div>
                <br> <br>
                <div id="cardInside" class="cardInsideVal" style="display: none;" ></div>
                <br>
                <input type="submit" id="mySubmit" class="btn btn-info" value="Submit" />





            </form>
        </div>



    </div>
    <%- include ("../partials/footer.ejs"); %>



</body>

</html>

<script>
    $(document).ready(function () {

        if ($("#lista1").val() === "0") {
            ajaxGetPlatos();
        }
        else if ($("#lista1").val() === "1") {
            ajaxGetMenuss();
        } else if ($("#lista1").val() === "2") {
            ajaxGetPlanificaciones();
        }
        // GET REQUEST
        $("#lista1").change(function (event) {
            event.preventDefault();

            if ($("#lista1").val() === "0") {
                ajaxGetPlatos();
            }
            else if ($("#lista1").val() === "1") {
                ajaxGetMenus();
            } else if ($("#lista1").val() === "2") {
                ajaxGetPlanificaciones();
            }

        });

        // DO GET
        function ajaxGetPlatos() {
            $.ajax({
                type: "GET",
                url: "create/load/dishes",
                success: function (result) {
                    console.log(result);
                    $('#lista2 select').empty();
                    $.each(result, function (i, plato) {
                        $('#select2').append("<option id='" + plato._id + "' value='" + plato._id + "'>" + plato._id)
                    });

                },
                error: function (e) {
                    $("#lista2").html("<strong>Error</strong>");
                    console.log("ERROR: ", e);
                }
            });
        };
        function ajaxGetMenus() {
            $.ajax({
                type: "GET",
                url: "create/load/menus",
                success: function (result) {
                    console.log(result)
                    $('#lista2 select').empty();
                    $.each(result, function (i, menu) {
                        $('#select2').append("<option value='" + menu._id + "'>" + menu._id)
                    });
                },
                error: function (e) {
                    $("#lista2").html("<strong>Error</strong>");
                    console.log("ERROR: ", e);
                }
            });
        };
        function ajaxGetPlanificaciones() {
            $.ajax({
                type: "GET",
                url: "create/load/planifications",
                success: function (result) {
                    console.log(result)
                    $('#lista2 select').empty();
                    $.each(result, function (i, plan) {
                        $('#select2').append("<option value='" + plan._id + "'>" + plan._id)
                    });

                },
                error: function (e) {
                    $("#lista2").html("<strong>Error</strong>");
                    console.log("ERROR: ", e);
                }
            });
        };

        $("#aux").submit(function (event) {
            // Prevent the form from submitting via the browser.
            event.preventDefault();
            ajaxPost();
        });


        function ajaxPost() {

            // PREPARE FORM DATA
            var formData = {
                recomendacion: $("#recomendacion").val(),
                tipos: $("#lista1").val(),
                select: $("#select2").val()
            }

            // DO POST
            $.ajax({
                type: "POST",
                contentType: "application/json",
                url: "create/load/post",
                data: JSON.stringify(formData),
                dataType: 'json',
                success: function (docs) {
                    window.location.href = "/planification/view";
                    $("#cardInside").css('display', 'block');
                    $("#cardInside").css('padding-bottom', '-20px');
                    $("#cardInside").html("<p>" +
                        "<b>Evaluaci√≥n realizada: </b><br>" +
                        " Los resultados obtenidos empleando " + docs.recomendacion + " para " + docs.candidato + " se encuentran actualmente disponibles. </p><br>");

                    
                },
                error: function (e) {
                    alert("Error!")
                    console.log("ERROR: ", e);
                }
            });

            // Reset FormData after Posting
            resetData();

        }

        function resetData() {
            $("#recomendacion").val("");
            $("#lista1").val("");
            $("#select2").val("");
        }

    })
</script>

