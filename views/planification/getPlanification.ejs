<!DOCTYPE html>
<html lang="en">

<head>
    <title>Document</title>

    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script defer src="../../public/javascripts/dish.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/food.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/dish.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">


</head>

<body>
    <%- include ("../partials/navigation.ejs"); %>
    <div class="container">
        <div class="infoPage">
            <i class="fas fa-list-alt fa-2x"></i>
            <span> <%= items.myObject.infoPage.planificacion %> </span>
        </div>

        <hr>
        <br>
        <form method="POST">
            <div class="wrap">
                <div class="search">
                    <input type="text" name="_id" class="searchTerm" placeholder="<%= items.myObject.busqueda %>">
                    <a id="submit-form-link" href="#"></a>
                    <button type="submit" class="searchButton">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
        <br><br>



        <% const  nombres_sz=  items.myObject.tablaPlanificacion.nombres.length %>
        <% const  nombres=  items.myObject.tablaPlanificacion.nombres %>
        <% const  docs_sz =   items.myDocs.length %>
        <% const  docs =   items.myDocs %>

        <% const  nombre =   items.myDocs[0]._id %>


        <table class="table table-bordered table-striped table-hover table-sm">
            <thead class="thead-dark">
                <tr>
                    <% for (var i=0; i< nombres_sz; i++) { %>
                    <th scope="col"><%= nombres[i] %></th>
                    <% } %>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <% for (var i=0; i < docs_sz; i++) { %>
                    <td> <%= items.myDocs[i]._id  %> </td>
                    <td> <%= items.myDocs[i].tipo  %> </td>

                    <td>
                        <% if (items.myDocs[i].tipo === "diaria") {  %>
                        <% for (var j=0; j < items.myDocs[i].menus.length; j++) { %>
                        <% for (var k=0; k < items.myDocs[i].menus[0][j+1].length; k++) { %>
                        <%=items.myDocs[i].menus[0][j+1][k]._id%>
                        <% if( (k+1) < items.myDocs[i].menus[0][1].length) {  %>
                        <br>
                        <% } %>
                        <% } %>

                        <% } %>
                    <td> <button type="button" class="btn btn-danger"><a title="Eliminar"
                                href="/menu/delete/<%=docs[i]['_id']%>"> <i class="fas fa-trash-alt"></i></a></button>
                        <button type="button" class="btn btn-info"><a title="Ver detalles"
                                href="/menu/<%=docs[i]['_id']%>"><i class="fas fa-search-plus"></i></a></button>
                        <button type="button" class="btn btn-warning"><a title="Editar" href="#"><i
                                    class="fas fa-edit"></i></a></button></td>
                    </td>
                    <% } %>



                    <% if (items.myDocs[i].tipo === "semanal" || items.myDocs[i].tipo === "mensual") {  %>
                    <% let  index =   1 %>
                    <% let  index2 =   0 %>
                    <% for (var j=0; j < items.myDocs[i].menus.length; j++) { %>
                    <% for (var k=0; k < items.myDocs[i].menus[j][index].length; k++) { %>
                    <%= items.myDocs[i].menus[j][index][k]._id  %>
                    <% if ( k+1 === items.myDocs[i].menus[j][index].length) { %>
                    <br>
                    <% }  %>
                    <% } %>
                    <% index++ %>
                    <% } %>

                    <td> <button type="button" class="btn btn-danger"><a title="Eliminar"
                                href="/menu/delete/<%=docs[i]['_id']%>"> <i class="fas fa-trash-alt"></i></a></button>
                        <button type="button" class="btn btn-info"><a title="Ver detalles"
                                href="/menu/<%=docs[i]['_id']%>"><i class="fas fa-search-plus"></i></a></button>
                        <button type="button" class="btn btn-warning"><a title="Editar" href="#"><i
                                    class="fas fa-edit"></i></a></button></td>
                    </td>
                    
                    <% } %>
                </tr>

                <% } %>


            </tbody>
        </table>


    </div>
    <%- include ("../partials/footer.ejs"); %>
</body>


</html>