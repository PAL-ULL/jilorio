<!DOCTYPE html>
<html lang="en">

<head>
    <title>Document</title>

    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/food.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/dish.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/update.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/v4-shims.css">


</head>

<body>
    <%- include ("../partials/navigation.ejs"); %>
    <div class="container">
        <div class="infoPage">
            <i class="fas fa-list-alt fa-2x"></i>
            <span> <%= items.myObject.infoPage.users %> </span>
        </div>

        <hr style="border-color: rgb(46, 115, 124);">
        <br>
        <%- include ("../partials/message.ejs"); %>
        <br>
        <form method="POST">
            <div class="wrap">
                <div class="search">
                    <input type="text" name="_id" class="searchTerm" placeholder="<%= items.myObject.busqueda %>">
                    <a id="submit-form-link" href="#"></a>
                    <button type="submit" class="spanColor searchButton">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
        <br><br>

        <% const  nombres_sz=  items.myObject.tablaUsers.nombres.length %>
        <% const  nombres=  items.myObject.tablaUsers.nombres %>
        <% const  docs_sz =   items.myUsers.length %>
        <% const  docs =   items.myUsers %>

        <div class="card-body">
            <div class="login_container d-flex flex-column">
                <form method="POST" , action='/users/update/<%= items.id %>'>
                    <br>
                    <% for (var i=0; i< items.myObject.userEdit.form.length; i++) { %>
                    <label><%= items.myObject.userEdit.form[i].label %></label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <% if (items.myObject.userEdit.form[i].name === "username")  {%>
                            <span class="input-group-text" id="basic-addon1">@</span>
                            <% } else {%>
                            <span class="input-group-text" id="basic-addon1"><i
                                    class="<%= items.myObject.userEdit.form[i].icon %>"></i></span>
                            <% } %>
                        </div>
                        <% if ((items.myObject.userEdit.form[i].name === "password")  || (items.myObject.userEdit.form[i].name === "password2")) {%>
                        <input type="<%= items.myObject.userEdit.form[i].type %>" class="form-control"
                            placeholder="<%= items.myObject.userEdit.form[i].placeholder %>"
                            aria-label="<%= items.myObject.userEdit.form[i].ariaLabel %>"
                            aria-describedby="basic-addon1" name="<%= items.myObject.userEdit.form[i].name %>"
                            #<%= items.myObject.userEdit.form[i].name %> required>
                        <% } else {%>
                        <input type="<%= items.myObject.userEdit.form[i].type %>" class="form-control"
                            placeholder="<%= items.myObject.userEdit.form[i].placeholder %>"
                            aria-label="<%= items.myObject.userEdit.form[i].ariaLabel %>"
                            aria-describedby="basic-addon1"
                            value="<%=items.myUsers[0][items.myObject.userEdit.form[i].name]%>"
                            name="<%= items.myObject.userEdit.form[i].name %>"
                            #<%= items.myObject.userEdit.form[i].name %> required>
                        <% } %>
                       
                      
                    </div>
                    <% } %>
                  
                    <br>
                    <div class="d-flex justify-content-center align-items-center p-3 texto">
                        <button class="btn btn-info" type="submit" href="/users/update/<%= items.id %>"><%= items.myObject.userEdit.button %></button>
                    </div>
                </form>
                </form>
            </div>
        </div>

    </div>
    <%- include ("../partials/footer.ejs"); %>
</body>


</html>